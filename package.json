{
    "name": "solution-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@apollo/client": "^3.3.20",
        "@hookform/resolvers": "^2.8.8",
        "@loadable/component": "^5.15.0",
        "antd": "^4.18.9",
        "graphql": "^15.5.0",
        "joi": "^17.4.0",
        "jwt-decode": "^3.1.2",
        "promise-timeout": "^1.3.0",
        "query-string": "^7.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-helmet": "^6.1.0",
        "react-hook-form": "^7.27.1",
        "react-router-dom": "^6.2.1",
        "react-scripts": "^4.0.3",
        "sass": "^1.49.9",
        "source-map-explorer": "^2.5.2",
        "subscriptions-transport-ws": "^0.9.19",
        "typescript": "^4.3.4",
        "vite": "^2.7.6",
        "web-vitals": "^1.1.2"
    },
    "scripts": {
        "start": "vite",
        "dev": "vite --mode dev",
        "build": "tsc && vite build",
        "serve": "vite preview",
        "type:check": "tsc",
        "lint:check": "next lint",
        "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|jsx|tsx)\" --cache --fix",
        "prettier": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|jsx|tsx)\" --write",
        "prettier:check": "prettier --config .prettierrc \"src/**/*.+(ts|js|jsx|tsx)\" --check",
        "prepare": "husky install",
        "codegen": "graphql-codegen --config codegen.yml"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^1.21.5",
        "@graphql-codegen/introspection": "^1.18.2",
        "@graphql-codegen/typescript": "^1.22.2",
        "@graphql-codegen/typescript-operations": "^1.18.1",
        "@graphql-codegen/typescript-react-apollo": "^2.2.6",
        "@rollup/plugin-replace": "^3.1.0",
        "@types/loadable__component": "^5.13.3",
        "@types/promise-timeout": "^1.3.0",
        "@types/react": "^17.0.11",
        "@types/react-dom": "^17.0.7",
        "@types/react-helmet": "^6.1.1",
        "@types/react-router-dom": "^5.1.7",
        "@types/webpack-env": "^1.16.0",
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.27.0",
        "@vitejs/plugin-react": "^1.1.3",
        "autoprefixer": "^10.4.2",
        "eslint": "^7.28.0",
        "eslint-config-airbnb-typescript-lite": "^12.1.3",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-sonarjs": "^0.10.0",
        "eslint-plugin-unicorn": "^33.0.1",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "prettier": "^2.5.1",
        "tailwindcss": "^3.0.23",
        "vite-plugin-environment": "^1.0.1",
        "vite-tsconfig-paths": "^3.4.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "npm run lint",
            "npm run prettier"
        ],
        "*.{json,md}": [
            "npm run prettier"
        ]
    }
}
